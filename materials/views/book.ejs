<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Replace <Your Full Name> with your name here  -->
    <title>Phuc Huynh Tan's Weekly Readings</title>
    
    <!-- Include your favicon here -->

    <!-- Including Bootstrap CSS -->
     <link rel="stylesheet" href="/style/book.css">
     <link rel="stylesheet" href="/style/header.css">
     <link rel="stylesheet" href="/style/footer.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
      
</head>
<!-- Header-->
<%- include('partials/header') %>

<!-- Main content-->
<main>
    <div class="book-container">
    <div class="book-details">
        <!-- Book details-->
         <% if(book){%>
            <div class="book-card"> 
                <img src="<%= book.image || book.imageUrl %>" alt="<%=book.title%>">
                <div class="book-desc">
                    <h3><%=book.title%></h3>
                    <p><%=book.author%></p>
                    <p><%=book.description%></p>
                    <span><%= book.category | book.year%></span>
                </div>

            </div>
            <%}else{%>   
                <p>No book loaded</p>             
            <%}%>
    </div>

    <!-- Related books in the same category -->
    <section>
        <p>Related Books</p>
        <div class="related-container">
            <% related.forEach(book =>{%>
                <div class="related-card">
                    <img src="<%=book.image || book.imageUrl%>" alt="<%=book.title%>">
                    <h3><%=book.title%></h3>
                    <p><%=book.author%></p>
                    <p><%=book.description%></p>
                    <span><%= book.category | book.year%></span>
                </div>
            <%})%>
        </div>
        
       
        </section>

        <!-- Back button here -->
        <div class="back-btn">
             <a href="/" id="back-btn">Back</a>
        </div>
       
    </div>
  </main>
    
 <!-- Footer -->
        <%- include('partials/footer') %>
    </div>

<!-- Including Boostrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>
