<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Replace <Your Full Name> with your name here  -->
    <title>Phuc Huynh Tan's Weekly Readings</title>
    
    <!-- Include your favicon here -->
    <link rel="stylesheet" href="/style/book.css">
     <link rel="stylesheet" href="/style/header.css">
     <link rel="stylesheet" href="/style/footer.css">
    <!-- Including Bootstrap CSS -->
     <link rel="stylesheet" href="/style/list.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
      
</head>

<body>
    <%- include('partials/header') %> 

    <div class="container mx-auto min-vh-100 d-flex flex-column">

<!-- Header, the first section of the page-->
<header classs="header-container p-3">
    
</header>

<!-- Main content -->
<main>
    
    <!-- Your profile-->
     <div class="page-container">

     
        <aside id="profile">
            <div>
                <img src="/images/mike.jpg" alt="" height="250" >
            </div>
            <div class="personal">
                <div class="mb-4">
                    <span>Hi, I'm</span>
                    <h1>Peter John</h1>
                </div>
                <div class="personal-name">
                    <h2>v1234567</h2>
                    <h2>peter.john@rmit.edu.vn</h2>
                </div>
            </div>
        </aside>
        
        <!-- The reading list is shown here-->
        <section id="reading-list">
            <h2>Recommended <b>READING LIST</b></h2><br>
            <form action="/" method="POST">
                <button id="refresh-btn" type="refresh">Refresh</button>
            </form>
            <form action="/search" method="GET">
                <button type="submit" id="button-search">Click to search !</button>
            </form>
            

            <div class="reading-plan">
                <% random.books.forEach(book => { %>
                    <% if(book.category === "TEXTBOOK"){%>
                        <div class="reading-card-content">
                            <a href="/book/<%=encodeURIComponent(book.title)%>">
                                <img src="<%= book.imageUrl || book.image%>" alt="<%=book.title%>">
                                <section class="book-info">
                                    <h3><%= book.title %></h3>
                                    <span><%= book.author%></span>
                                    <p><%= book.description%></p>    
                                </section>
                            </a>
                        </div>
                    <%}else if(book.category === "PHILOSOPHY"){%>
                        <div class="reading-card-content">
                             <a href="/book/<%=encodeURIComponent(book.title)%>">
                            <img src="<%= book.imagUrl || book.image%>" alt="<%=book.title%>">
                                <section class="book-info">
                                    <h3><%= book.title %></h3>
                                    <span><%= book.author%></span>
                                    <p><%= book.description%></p>    
                                </section>
                            </a>
                        </div>
                            
                    <%}else{%>
                        <div class="reading-card-content">
                             <a href="/book/<%=encodeURIComponent(book.title)%>">
                                <img src="<%= book.imagUrl || book.image%>" alt="<%=book.title%>">
                                <section class="book-info">
                                    <h3><%= book.title %></h3>
                                    <span><%= book.author%></span>
                                    <p><%= book.description%></p>    
                                </section>
                            </a>
                        </div>
                        
                    <%}%>
                <%})%>
            
            </div>
        </section> 
</div>
</main>
    
 <!-- Footer -->
        <%- include('partials/footer') %>
    </div>


<!-- Including Boostrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  <script src="/script/list.js" defer></script>
</body>
</html>
